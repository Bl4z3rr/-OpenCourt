<div class="games-box">
  <div class="col-lg-8">
    <% @games.each do |game| %>
      <div class="game-card">
        <h1> <%= link_to game.name, game_path(game) %> </h1>
        <li> <%= game.location %> </li>
        <li><%= game.price %> </li>
        <li><%= game.description %></li>
        <li><%= game.num_of_players %></li>
        <li><%= game.date %></li>
        <li><%= game.duration %></li>
      </div>
    <% end %>

      <div class="col-lg-4">
       <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>


  </div>
</div>


